{
    "name": "reminder-pro",
    "version": "1.0.0",
    "description": "A modern local reminder application built with Electron, Vite, and React.",
    "main": "./out/main/index.js",
    "author": "Antigravity",
    "scripts": {
        "dev": "electron-vite dev",
        "build": "electron-vite build",
        "preview": "electron-vite preview",
        "dist": "electron-vite build && electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "com.antigravity.reminderpro",
        "productName": "Reminder Pro",
        "directories": {
            "output": "dist"
        },
        "files": [
            "out/**/*",
            "node_modules/**/*",
            "package.json",
            "resources/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "resources/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "shortcutName": "Reminder Pro"
        }
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.0",
        "@electron-toolkit/utils": "^3.0.0",
        "lucide-react": "^0.300.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config": "^1.0.1",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.17",
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1",
        "electron-vite": "^2.0.0",
        "eslint": "^8.56.0",
        "eslint-plugin-react": "^7.33.2",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "vite": "^5.0.12"
    }
}